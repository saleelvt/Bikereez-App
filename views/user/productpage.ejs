<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BIKEREEZ</title>
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="/CSS/user-welcome.css">
<link rel="icon" type="image/x-icon" href="/assets/240_F_328494327_A2XpjDQp8f74FsQh7W7yof1tXU9ob3Sb.jpg">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css">

<!-- -----// font awsom ----- -->
<script src="https://kit.fontawesome.com/1f94a7e510.js" crossorigin="anonymous"></script>
<!-- SweetAlert2 CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<body>

    <!--header-->
    <%- include('../partials/userHeader') %>




        <div class="container">
            <% if (messages.success) { %>
                <div class="container my-3" style="border-radius: 20px;" id="msg-div">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <p class="m-0"><strong>Message.! </strong>
                            <%= messages.success %>
                        </p>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <% }else if (messages.error){ %>
                    <div class="container my-3" style="border-radius: 20px;" id="msg-div">
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p class="m-0"><strong>Message.! </strong>
                                <%= messages.error %>
                            </p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                    <%}%>





                        <script>
                            setTimeout(function () {
                                document.getElementById('msg-div').style.display = 'none';
                            }, 2000);

                        </script>

                        <div class="row justify-content-center p-3 py-4  shadow-sm">
                            <div class="col-lg-6 col-md-8 col-sm-10 col-12 py-4 shadow-sm">
                                <div class="row product-img justify-content-center">
                                    <div class="col-12  text-center">
                                        <a href="/uploads/<%= product.images[0] %>" title="Image 1">
                                            <img src="/uploads/<%= product.images[0] %>" class="img-fluid" id="img"
                                                alt="">
                                        </a>
                                    </div>
                                    <div class="col-4 col-sm-3 col-md-2 my-2">
                                        <a href="/uploads/<%= product.images[1] %>" title="Image 2">
                                            <img src="/uploads/<%= product.images[1] %>" class="img-fluid" id="img"
                                                alt="">
                                        </a>
                                    </div>
                                    <div class="col-4 col-sm-3 col-md-2 my-2">
                                        <a href="/uploads/<%= product.images[2] %>" title="Image 3">
                                            <img src="/uploads/<%= product.images[2] %>" class="img-fluid" id="img"
                                                alt="">
                                        </a>
                                    </div>

                                    <!-- <div class="col-4 col-sm-3 col-md-2 my-2">
                    <img src="/uploads/" class="img-fluid" alt="">
                </div> -->
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-8 col-sm-10 col-12 py-4 shadow-sm">
                                <table class="table">
                                    <tr>
                                        <td>Product Name</td>
                                        <th>
                                            <%= product.ProductName %>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>Description</td>
                                        <th>
                                            <%= product.Description %>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>Specification</td>
                                        <th>
                                            <%= product.Specification1%>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>Brand</td>
                                        <th>
                                            <%= product.BrandName.Name %>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>Category</td>
                                        <th>
                                            <%= product.Category.Name %>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>Price</td>
                                        <th class="text-danger"><del>
                                                <%= product.Price %>
                                            </del></th>
                                    </tr>
                                    <tr>
                                        <td> DiscountAmount</td>

                                        <th>
                                            <% if (product.OfferPrice>0) { %>

                                                <%= product.OfferPrice  %>
                                            
                                                <% }else if (product.DiscountAmount){ %>
                                                  
                                                        <%= product.DiscountAmount %>
                                     
                                                    <%}%>
                                        </th>
                                       
                                    </tr>
                                    <tr>
                                        <td>Stock</td>
                                        <th>
                                            <%= product.AvailableQuantity %>
                                        </th>
                                    </tr>
                                </table>
                                <div class="d-flex justify-content-around my-3">
                                    <button class="btn btn-outline-dark me-3" id="sweetalert"
                                        onclick="addToCart('<%= product._id %>')">Add to Cart</button>
                                </div>
                            </div>
                        </div>
        </div>




        <!--footer-->

        <%- include('../partials/userFooterOffcanavas') %>

            <script>
                $(document).ready(function () {
                    $('.product-img').magnificPopup({
                        delegate: 'a',
                        type: 'image',
                        gallery: {
                            enabled: true
                        }
                    });
                });
            </script>


            <script>
                $(document).ready(function () {
                    $('.product-img').magnificPopup({
                        delegate: 'a',
                        type: 'image',
                        gallery: {
                            enabled: true
                        },
                        callbacks: {
                            open: function () {
                                // Add zoom in/out functionality on mouseover
                                $('.mfp-img').on('mouseenter', function () {
                                    $(this).addClass('mfp-zoom-in');
                                }).on('mouseleave', function () {
                                    $(this).removeClass('mfp-zoom-in');
                                });
                            }
                        }
                    });
                });
            </script>
            <style>
                .mfp-img.mfp-zoom-in {
                    transform: scale(1.2);
                    /* Adjust the scale factor as needed */
                    transition: transform 0.3s ease-in-out;
                    /* Adjust the transition duration as needed */
                }
            </style>

            <script>
                function addToCart(productId) {
                    $.ajax({
                        url: `/addToCart/${productId}`,
                        method: 'get',
                        success: function (Response) {
                            if (Response.success) {
                           
                    Swal.fire({
                        icon: 'success',
                        title: 'Item Added',
                        showConfirmButton: false,
                        timer: 1500
                    });

                            }
                            else {
                                 // Handle the case where adding to cart was not successful
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Stock not available at the moment',
                    });
                            }
                        }
                    })
                }
            </script>


</body>

</html>