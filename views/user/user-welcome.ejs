    <!--main-->
    <main>
        <div class="container shadow-sm py-3 border rounded">
            <section>

                <h3 class="fw-bold">Shop Popular Categories</h3>
                <div class="row d-flex justify-content-center py-2 ">
                    <div class="container">
                        <div class="row d-flex justify-content-center ">
                            <% categories.forEach(function(category) { %>
                               
                                <div class="col-2 p-2">
                                    <div
                                        class="alert-info shadow-sm rounded border p-3 d-flex justify-content-center ">
                                        <a class="text-decoration-none text-dark"
                                            href="/categoryFilter/<%= category._id %>">
